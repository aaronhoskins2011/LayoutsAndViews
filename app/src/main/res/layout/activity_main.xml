<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cathyejohnson.layoutsandviews.MainActivity">

    <EditText
        android:inputType="number"
        android:id="@+id/etNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_toRightOf="@+id/etNumber1"
        android:inputType="number"
        android:id="@+id/etNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_toEndOf="@+id/etNumber2"
        android:layout_toRightOf="@+id/etNumber1"
        android:id="@+id/btnDoMagic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:layout_below="@+id/btnDoMagic"
        android:layout_toRightOf="@+id/etNumber2"
        />

    <ImageView
        android:id="@+id/imageId"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/images"
        android:layout_below="@+id/tvName"
        />

    <Button
        android:layout_toEndOf="@+id/etNumber2"
        android:layout_toRightOf="@+id/etNumber1"
        android:id="@+id/btnDoMagic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageId"
        android:onClick="secondActivity"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPersonName"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPersonGender"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="passInfo"
            />
    </LinearLayout>

</RelativeLayout>
